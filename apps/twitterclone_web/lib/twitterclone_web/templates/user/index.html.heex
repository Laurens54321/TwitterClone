<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Email</th>
      <th>Options</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.user_id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>

      <td>
        <span><%= link "Show", to: Routes.profile_path(@conn, :profile, user.user_id) %></span>
        <span><%= link "Edit", to: Routes.user_path(@conn, :edit, user.user_id) %></span>
        <span><%= link "Delete", to: Routes.user_path(@conn, :delete, user.user_id), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New User", to: Routes.user_path(@conn, :new) %></span>
